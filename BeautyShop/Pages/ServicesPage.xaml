<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.ServicesPage"
             Title="Услуги">

    <Grid RowDefinitions="Auto,*" Padding="10">

        <!-- Кнопка для админа -->
        <Button x:Name="AddServiceBtn"
                Text="➕ Добавить услугу"
                Clicked="OnAddServiceClicked"
                IsVisible="False"
                HorizontalOptions="End"
                Margin="0,0,0,10" />

        <!-- Список услуг -->
        <CollectionView x:Name="ServicesList" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BorderColor="Gray" CornerRadius="10">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnServiceTapped"/>
                        </Frame.GestureRecognizers>

                        <VerticalStackLayout>
                            <Image Source="{Binding Service.ImagePath}" HeightRequest="150" Aspect="AspectFill" />
                            <Label Text="{Binding Service.Title}" FontAttributes="Bold" FontSize="18" />
                            <Label Text="{Binding Rating, StringFormat='⭐ Рейтинг: {0:F1}'}" FontSize="14" TextColor="Orange" />
                            <Label Text="{Binding Service.Description}" FontSize="14" />
                            <Label Text="{Binding Service.Price, StringFormat='Цена: {0} ₸'}" FontSize="14" />

                            <Button Text="⭐ В избранное" Clicked="OnAddToFavoritesClicked" />
                            <Button Text="💬 Оставить отзыв" Clicked="OnLeaveReviewClicked" />
                            <Button Text="📋 Смотреть отзывы" Clicked="OnViewReviewsClicked" />

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
