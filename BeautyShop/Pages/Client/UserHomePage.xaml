<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.UserHomePage"
             Title="Главная (Клиент)"
             BackgroundColor="#fff">

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="Добро пожаловать в BeautyShop!" FontSize="24" HorizontalOptions="Center"/>
        <Button Text="🚪 Выйти из аккаунта"
        Clicked="OnLogoutClicked"
        BackgroundColor="DarkRed"
        TextColor="White" />

        <Button Text="📅 Посмотреть услуги" Clicked="OnViewServicesClicked" />
        <Button Text="🛍️ Корзина" Clicked="OnCardClicked"  BindingContext="{Binding .}" />
        <Button Text="🌟 Избранное" Clicked="OnFavoritesClicked"  BindingContext="{Binding .}" />
        <Button Text="📖 История записей" Clicked="OnHistoryClicked"  BindingContext="{Binding .}"/>
    </VerticalStackLayout>
</ContentPage>
