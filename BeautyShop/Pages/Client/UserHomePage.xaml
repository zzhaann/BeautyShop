<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.UserHomePage"
             Title="Главная (Клиент)"
             BackgroundColor="#fff">

    <Grid RowDefinitions="Auto, *, Auto">

        <!-- Карусель наверху -->
        <CarouselView x:Name="PromoCarousel"
              Grid.Row="0"
              HeightRequest="180"
              Loop="True"
              IsBounceEnabled="False"
              Margin="10,10,10,0">
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>promo1.jpg</x:String>
                    <x:String>promo2.jpg</x:String>
                    <x:String>promo3.jpg</x:String>
                </x:Array>
            </CarouselView.ItemsSource>

            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Image Aspect="AspectFill" Source="{Binding}" />
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <!-- Приветствие посередине -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
                <Label Text="Добро пожаловать в BeautyShop!" 
                       FontSize="26" 
                       TextColor="OliveDrab"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Меню снизу -->
        <Grid Grid.Row="2" Padding="10" BackgroundColor="#FFF5EE">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Кнопка 1 -->
            <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                <Image Source="services_icon.png" HeightRequest="32" WidthRequest="32" />
                <Button Text="Услуги" 
                        Clicked="OnViewServicesClicked"
                        BackgroundColor="Transparent"
                        TextColor="DarkOliveGreen"
                        FontAttributes="Bold"
                        Padding="0" />
            </VerticalStackLayout>

            <!-- Кнопка 2 -->
            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                <Image Source="cart_icon.png" HeightRequest="32" WidthRequest="32" />
                <Button Text="Корзина" 
                        Clicked="OnCardClicked"
                        BackgroundColor="Transparent"
                        TextColor="DarkOliveGreen"
                        FontAttributes="Bold"
                        Padding="0" />
            </VerticalStackLayout>

            <!-- Кнопка 3 -->
            <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                <Image Source="favorites_icon.png" HeightRequest="32" WidthRequest="32" />
                <Button Text="Избранное" 
                        Clicked="OnFavoritesClicked"
                        BackgroundColor="Transparent"
                        TextColor="DarkOliveGreen"
                        FontAttributes="Bold"
                        Padding="0" />
            </VerticalStackLayout>

            <!-- Кнопка 4 -->
            <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center">
                <Image Source="history_icon.png" HeightRequest="32" WidthRequest="32" />
                <Button Text="История" 
                        Clicked="OnHistoryClicked"
                        BackgroundColor="Transparent"
                        TextColor="DarkOliveGreen"
                        FontAttributes="Bold"
                        Padding="0" />
            </VerticalStackLayout>

        </Grid>

    </Grid>

</ContentPage>
