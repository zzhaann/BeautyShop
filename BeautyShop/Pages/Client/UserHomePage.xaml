<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.UserHomePage"
             Title="Главная (Клиент)">

    <Grid>
        <Image Source="https://i.pinimg.com/736x/a7/03/f6/a703f6aa2e1ac949ce797ac689607aac.jpg" 
               Aspect="AspectFill" 
               Opacity="0.6"/>

        <VerticalStackLayout Padding="20" Spacing="40">
            <Label Text="Добро пожаловать в BeautyShop!" 
                   FontSize="30" 
                   TextColor="OliveDrab"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

            <Grid ColumnDefinitions="*,*" 
                  RowDefinitions="*,*" 
                  ColumnSpacing="15" 
                  RowSpacing="15">

                
                <Frame Grid.Row="0" Grid.Column="0"
                       CornerRadius="15" 
                       Padding="15"
                       BackgroundColor="White"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Image Source="https://cdn-icons-png.flaticon.com/512/5066/5066736.png"
                               HeightRequest="40"
                               WidthRequest="40"
                               HorizontalOptions="Center"/>
                        <Button Text="Услуги" 
                                Clicked="OnViewServicesClicked"
                                BackgroundColor="Transparent"
                                TextColor="DarkOliveGreen"
                                FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Frame>

                
                <Frame Grid.Row="0" Grid.Column="1"
                       CornerRadius="15" 
                       Padding="15"
                       BackgroundColor="White"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Image Source="https://cdn-icons-png.flaticon.com/512/1374/1374128.png"
                               HeightRequest="40"
                               WidthRequest="40"
                               HorizontalOptions="Center"/>
                        <Button Text="Корзина" 
                                Clicked="OnCardClicked"
                                BackgroundColor="Transparent"
                                TextColor="DarkOliveGreen"
                                FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Frame>

                
                <Frame Grid.Row="1" Grid.Column="0"
                       CornerRadius="15" 
                       Padding="15"
                       BackgroundColor="White"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Image Source="https://cdn-icons-png.flaticon.com/512/263/263075.png"
                               HeightRequest="40"
                               WidthRequest="40"
                               HorizontalOptions="Center"/>
                        <Button Text="Избранное" 
                                Clicked="OnFavoritesClicked"
                                BackgroundColor="Transparent"
                                TextColor="DarkOliveGreen"
                                FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Frame>

                
                <Frame Grid.Row="1" Grid.Column="1"
                       CornerRadius="15" 
                       Padding="15"
                       BackgroundColor="White"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Image Source="https://cdn-icons-png.flaticon.com/512/565/565584.png"
                               HeightRequest="40"
                               WidthRequest="40"
                               HorizontalOptions="Center"/>
                        <Button Text="История" 
                                Clicked="OnHistoryClicked"
                                BackgroundColor="Transparent"
                                TextColor="DarkOliveGreen"
                                FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Frame>

            </Grid>
           
            <VerticalStackLayout Padding="0" Spacing="15" VerticalOptions="Center">
                <Button Text="🚪 Выйти из аккаунта"
                        Clicked="OnLogoutClicked"
                        BackgroundColor="DarkRed"
                        TextColor="White" 
                        FontAttributes="Bold"/>

                <Button Text="📅 Посмотреть услуги" 
                        Clicked="OnViewServicesClicked"
                        BackgroundColor="White"
                        TextColor="DarkOliveGreen"
                        FontAttributes="Bold"/>

                <Button Text="🛍️ Корзина" 
                        Clicked="OnCardClicked"  
                        BindingContext="{Binding .}"
                        BackgroundColor="White"
                        TextColor="DarkOliveGreen"
                        FontAttributes="Bold"/>

                <Button Text="🌟 Избранное" 
                        Clicked="OnFavoritesClicked"  
                        BindingContext="{Binding .}"
                        BackgroundColor="White"
                        TextColor="DarkOliveGreen"
                        FontAttributes="Bold"/>

                <Button Text="📖 История записей" 
                        Clicked="OnHistoryClicked"  
                        BindingContext="{Binding .}"
                        BackgroundColor="White"
                        TextColor="DarkOliveGreen"
                        FontAttributes="Bold"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
        
    </Grid>
    
</ContentPage>
