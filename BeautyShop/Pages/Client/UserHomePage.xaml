<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.UserHomePage"
             Title="Главная (Клиент)"
             BackgroundColor="#fff">

    <Grid RowDefinitions="Auto, *, Auto">

        <!-- Карусель наверху -->
        <CarouselView x:Name="PromoCarousel"
              Grid.Row="0"
              HeightRequest="180"
              Loop="True"
              IsBounceEnabled="False"
              Margin="10,10,10,0">
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>promo1.jpg</x:String>
                    <x:String>promo2.jpg</x:String>
                    <x:String>promo3.jpg</x:String>
                </x:Array>
            </CarouselView.ItemsSource>

            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Image Aspect="AspectFill" Source="{Binding}" />
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <!-- Основной контент: карточки + приветствие -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <Label Text="Популярные услуги"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="Maroon"
                       HorizontalOptions="Center" />

                <!-- Карточка 1 -->
                <Frame CornerRadius="20"
                       HasShadow="True"
                       Padding="0"
                       Margin="0,0,0,10"
                       BackgroundColor="White">
                    <Grid>
                        <Image Source="https://i.pinimg.com/736x/98/7d/2e/987d2e94839921b5c32d66dc87111e91.jpg" Aspect="AspectFill" HeightRequest="200"/>
                        <BoxView BackgroundColor="#80000000" />
                        <VerticalStackLayout Padding="15" VerticalOptions="End">
                            <Label Text="Маникюр" FontSize="22" TextColor="White" FontAttributes="Bold" />
                            <Label Text="Красота и уход за вашими руками" FontSize="14" TextColor="White" />
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Карточка 2 -->
                <Frame CornerRadius="20"
                       HasShadow="True"
                       Padding="0"
                       Margin="0,0,0,10"
                       BackgroundColor="White">
                    <Grid>
                        <Image Source="https://i.pinimg.com/736x/32/22/24/322224f51e2d40e65ab270450bc0399e.jpg" Aspect="AspectFill" HeightRequest="200"/>
                        <BoxView BackgroundColor="#80000000" />
                        <VerticalStackLayout Padding="15" VerticalOptions="End">
                            <Label Text="Стрижка" FontSize="22" TextColor="White" FontAttributes="Bold" />
                            <Label Text="Модные причёски для всех" FontSize="14" TextColor="White" />
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Карточка 3 -->
                <Frame CornerRadius="20"
                       HasShadow="True"
                       Padding="0"
                       Margin="0,0,0,10"
                       BackgroundColor="White">
                    <Grid>
                        <Image Source="https://i.pinimg.com/736x/b5/ec/fc/b5ecfc8ec42a841ed99be2557e27cb3e.jpg" Aspect="AspectFill" HeightRequest="200"/>
                        <BoxView BackgroundColor="#80000000" />
                        <VerticalStackLayout Padding="15" VerticalOptions="End">
                            <Label Text="Макияж" FontSize="22" TextColor="White" FontAttributes="Bold" />
                            <Label Text="Идеальный образ на любое событие" FontSize="14" TextColor="White" />
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

             </VerticalStackLayout>
        </ScrollView>

        <!-- Меню снизу -->
        <Grid Grid.Row="2" Padding="10" BackgroundColor="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Кнопка 1 -->
            <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                <Image Source="service_icon.png" HeightRequest="32" WidthRequest="32" />
                <Button Text="Услуги" 
                        Clicked="OnViewServicesClicked"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        FontAttributes="Bold"
                        Padding="0" />
            </VerticalStackLayout>

            <!-- Кнопка 2 -->
            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                <Image Source="menu2.png" HeightRequest="32" WidthRequest="32" />
                <Button Text="Корзина" 
                        Clicked="OnCardClicked"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        FontAttributes="Bold"
                        Padding="0" />
            </VerticalStackLayout>

            <!-- Кнопка 3 -->
            <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                <Image Source="menu1.png" HeightRequest="32" WidthRequest="32" />
                <Button Text="Избранное" 
                        Clicked="OnFavoritesClicked"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        FontAttributes="Bold"
                        Padding="0" />
            </VerticalStackLayout>

            <!-- Кнопка 4 -->
            <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center">
                <Image Source="menu3.png" HeightRequest="32" WidthRequest="32" />
                <Button Text="История" 
                        Clicked="OnHistoryClicked"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        FontAttributes="Bold"
                        Padding="0" />
            </VerticalStackLayout>

        </Grid>

    </Grid>

</ContentPage>
