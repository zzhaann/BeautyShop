<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.FavoritesPage"
             Title="Избранное"
             BackgroundColor="#F8F8F8">

    <CollectionView x:Name="FavoritesCollectionView"
                    ItemsLayout="VerticalList"
                    Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="0,10"
                       Padding="15"
                       BorderColor="#E0E0E0"
                       BackgroundColor="White"
                       CornerRadius="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">

                        <Frame Padding="0" CornerRadius="10" HasShadow="False" IsClippedToBounds="True">
                            <Image Source="{Binding ImagePath}" 
                                   HeightRequest="180" 
                                   Aspect="AspectFill" />
                        </Frame>

                        <Label Text="{Binding Title}" 
                               FontSize="22" 
                               FontAttributes="Bold"
                               TextColor="#333"
                               HorizontalOptions="Center" />

                        <Button Text="Удалить из избранного"
                                BackgroundColor="#c992a1"
                                TextColor="White"
                                CornerRadius="10"
                                FontSize="16"
                                HeightRequest="45"
                                BindingContext="{Binding .}"
                                Clicked="OnRemoveFromFavoritesClicked" />

                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
