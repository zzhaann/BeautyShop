<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.FavoritesPage"
             Title="Избранное"
             BackgroundColor="#fff">

    <CollectionView x:Name="FavoritesCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="10" BorderColor="Gray" CornerRadius="10">
                    <VerticalStackLayout>
                        <Image Source="{Binding ImagePath}" HeightRequest="150" Aspect="AspectFill" />
                        <Label Text="{Binding Title}" FontSize="20" FontAttributes="Bold" />
                        <Button Text="⭐ Удалить из избранного"
                                Clicked="OnRemoveFromFavoritesClicked"
                                BindingContext="{Binding .}"
                                BackgroundColor="DarkRed"
                                TextColor="White" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
