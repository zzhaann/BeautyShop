<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.ReviewsPage"
             Title="Отзывы">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <!-- Шапка с кнопкой назад и заголовком -->
            <Grid ColumnDefinitions="Auto,*,Auto" Padding="0,0,0,10">
                <ImageButton Source="back_icon.png"
                             BackgroundColor="Transparent"
                             WidthRequest="30"
                             HeightRequest="30"
                             Clicked="OnBackClicked"
                             Grid.Column="0" />

                <Label Text="Отзывы"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Grid.Column="1" />
            </Grid>

            <!-- Название услуги -->
            <Label x:Name="TitleLabel"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Описание услуги -->
            <Label x:Name="DescriptionLabel"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <!-- Список отзывов -->
            <CollectionView x:Name="ReviewList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Username}" FontAttributes="Bold" FontSize="16" />
                                <Label Text="{Binding Rating, StringFormat='⭐ Оценка: {0}'}" FontSize="14" />
                                <Label Text="{Binding Comment}" FontSize="14" />
                                <Label Text="{Binding Date, StringFormat='🕓 {0:dd.MM.yyyy HH:mm}'}"
                                       FontSize="12" TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
