<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.OrderHistoryPage"
             Title="История заказов">

    <CollectionView x:Name="HistoryList" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="5" Padding="10" BorderColor="Gray" CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="{Binding FilePath}" FontSize="12" TextColor="DarkGray" />
                        <Label Text="{Binding CreatedAt, StringFormat='Дата: {0:dd.MM.yyyy HH:mm}'}" FontAttributes="Bold"/>
                        <Button Text="📂 Открыть чек" Clicked="OnOpenPdfClicked"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
