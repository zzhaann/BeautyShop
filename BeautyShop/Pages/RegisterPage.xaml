<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.RegisterPage"
             Title="Регистрация"
             BackgroundColor="#fff">

    <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="Center">

        <Label Text="Регистрация в BeautyShop" FontSize="24" HorizontalOptions="Center"/>

        <Entry x:Name="UsernameEntry" Placeholder="Логин" />
        <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True" />
        <Picker x:Name="RolePicker" Title="Роль">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>user</x:String>
                    <x:String>admin</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Button Text="Зарегистрироваться" Clicked="OnRegisterClicked" BackgroundColor="#00796B" TextColor="White"/>
        <Button Text="Назад ко входу" Clicked="OnLoginRedirect" BackgroundColor="Transparent" TextColor="#00796B"/>
    </VerticalStackLayout>
</ContentPage>
