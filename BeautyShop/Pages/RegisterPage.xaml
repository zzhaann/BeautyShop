<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.RegisterPage"
             Title="Регистрация">

    <Grid>
        <Image Source="https://i.pinimg.com/736x/6a/97/94/6a979455e016031c93e4b141a10f43d1.jpg" 
               Aspect="AspectFill"
               Opacity="0.9" 
               IsOpaque="True"/>

        <Frame BackgroundColor="White"
               CornerRadius="20"
               Padding="30"
               Margin="20"
               HasShadow="True"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Opacity="0.90">

            <VerticalStackLayout Spacing="15">

                <Label Text="Регистрация в BeautyShop"
                       FontSize="25"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="black"/>
                
                <Frame BackgroundColor="#f5f5f5"
                   BorderColor="Transparent"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False">   
                    <Entry x:Name="UsernameEntry"
                    Placeholder="Логин"
                    PlaceholderColor="Gray"
                    ClearButtonVisibility="WhileEditing"
                    Keyboard="Default" />   
                </Frame>

                <Frame BackgroundColor="#f5f5f5"
                    BorderColor="Transparent"
                    CornerRadius="10"
                    Padding="10"
                    HasShadow="False">
                    <Entry x:Name="PasswordEntry"
                       Placeholder="Пароль"
                       IsPassword="True"
                       PlaceholderColor="Gray"
                       ClearButtonVisibility="WhileEditing" />
                 </Frame>
                <Frame BackgroundColor="#f5f5f5"
                     BorderColor="Transparent"
                     CornerRadius="10"
                     Padding="10"
                     HasShadow="False">
                    <Entry x:Name="ConfirmPasswordEntry"
                       Placeholder="Повторите пароль"
                       IsPassword="True"
                       PlaceholderColor="Gray"
                       ClearButtonVisibility="WhileEditing" />
                </Frame>
                <Button Text="Зарегистрироваться"
                        Clicked="OnRegisterClicked"
                        BackgroundColor="OliveDrab"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50" />

                <Button Text="Назад ко входу"
                        Clicked="OnLoginRedirect"
                        BackgroundColor="Transparent"
                        TextColor="#2e2e2e"
                        FontAttributes="Bold" />
            </VerticalStackLayout>

        </Frame>
    </Grid>
</ContentPage>
