<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.RegisterPage"
             Title="Регистрация"
             BackgroundColor="#fff">

    <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="Center">

        <Label Text="Регистрация в BeautyShop" FontSize="24" HorizontalOptions="Center"/>

        <Entry x:Name="UsernameEntry"
               Placeholder="Логин"
               ClearButtonVisibility="WhileEditing"
               Keyboard="Default" />

        <Entry x:Name="PasswordEntry"
               Placeholder="Пароль"
               IsPassword="True"
               ClearButtonVisibility="WhileEditing" />

        <!-- 🔐 Хочешь — добавим подтверждение -->
        <Entry x:Name="ConfirmPasswordEntry"
               Placeholder="Повторите пароль"
               IsPassword="True"
               ClearButtonVisibility="WhileEditing" />

        <Button Text="Зарегистрироваться"
                Clicked="OnRegisterClicked"
                BackgroundColor="#00796B"
                TextColor="White" />

        <Button Text="Назад ко входу"
                Clicked="OnLoginRedirect"
                BackgroundColor="Transparent"
                TextColor="#00796B" />
    </VerticalStackLayout>
</ContentPage>
