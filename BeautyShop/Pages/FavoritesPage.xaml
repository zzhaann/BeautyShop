<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.FavoritesPage"
             Title="Избранное">

    <CollectionView x:Name="FavoritesList" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5" BorderColor="Gray" CornerRadius="10">
                    <VerticalStackLayout>
                        <Image Source="{Binding ImagePath}" HeightRequest="150" Aspect="AspectFill"/>
                        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="18"/>
                        <Label Text="{Binding Price, StringFormat='Цена: {0} ₸'}" FontSize="14"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
