<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.ReviewsPage"
             Title="Отзывы">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <!-- Информация об услуге -->
            <Label x:Name="TitleLabel" FontSize="22" FontAttributes="Bold" />
            <Label x:Name="DescriptionLabel" FontSize="14" TextColor="Gray" />

            <!-- Отзывы -->
            <CollectionView x:Name="ReviewList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Username}" FontAttributes="Bold" FontSize="16" />
                                <Label Text="{Binding Rating, StringFormat='⭐ Оценка: {0}'}" FontSize="14" />
                                <Label Text="{Binding Comment}" FontSize="14" />
                                <Label Text="{Binding Date, StringFormat='🕓 {0:dd.MM.yyyy HH:mm}'}"
                                       FontSize="12" TextColor="Gray" />

                                <!-- Только для админа -->
                                <Button Text="🗑 Удалить"
                                        Clicked="OnDeleteReviewClicked"
                                        FontSize="12"
                                        BackgroundColor="Crimson"
                                        TextColor="White"
                                        IsVisible="{Binding CanDelete}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
