<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.AppointmentCartPage"
             Title="Корзина">

    <VerticalStackLayout Padding="20" Spacing="10">

        <CollectionView x:Name="CartListView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="5">
                        <Label Text="{Binding Title}" FontAttributes="Bold" />
                        <Label Text="{Binding Price, StringFormat='Цена: {0} ₸'}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label x:Name="TotalLabel" FontSize="18" FontAttributes="Bold" />

        <Button Text="✅ Подтвердить и получить PDF" Clicked="OnConfirmClicked" BackgroundColor="#4CAF50" TextColor="White"/>

    </VerticalStackLayout>
</ContentPage>
