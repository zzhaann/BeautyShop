<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="BeautyShop.Pages.ClientsPage"
             Title="Клиенты">

    <ContentPage.Content>
        <StackLayout Padding="10">

            <Label Text="Список клиентов"
                   FontSize="24"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   Margin="0,10" />

            <CollectionView x:Name="ClientsCollectionView"
                            ItemsLayout="VerticalList"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5"
                               Padding="15"
                               BorderColor="LightGray"
                               CornerRadius="15"
                               HasShadow="True">

                            <toolkit:Expander>
                                <toolkit:Expander.Header>
                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="{Binding Username}"
                                               FontSize="18"
                                               FontAttributes="Bold" />
                                    </HorizontalStackLayout>
                                </toolkit:Expander.Header>

                                <toolkit:Expander.Content>
                                    <VerticalStackLayout Spacing="8">
                                        <Label Text="Пароль:" FontSize="14" TextColor="Gray" />
                                        <Label Text="{Binding Password}" FontSize="14" />

                                        <Button Text="🗑️ Удалить клиента"
                                                BackgroundColor="DarkRed"
                                                TextColor="White"
                                                Clicked="OnDeleteClientClicked"
                                                BindingContext="{Binding .}" />
                                    </VerticalStackLayout>
                                </toolkit:Expander.Content>

                            </toolkit:Expander>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ContentPage.Content>

</ContentPage>
