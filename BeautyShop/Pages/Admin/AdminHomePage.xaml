<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.AdminHomePage"
             Title="Админ-панель"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, *, Auto">


        <Grid Grid.Row="1">
        </Grid>
        
        
        <CarouselView x:Name="PromoCarousel"
              Grid.Row="0"
              HeightRequest="200"
              Loop="True"
              IsBounceEnabled="False">
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>promo1.jpg</x:String>
                    <x:String>promo2.jpg</x:String>
                    <x:String>promo3.jpg</x:String>
                </x:Array>
            </CarouselView.ItemsSource>

            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Image Aspect="AspectFill" Source="{Binding}" />
                </DataTemplate>
            </CarouselView.ItemTemplate>
            </CarouselView> 

            <Grid Grid.Row="2" Padding="20" BackgroundColor="#FFF5EE">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image Source="client_icon.png" Grid.Column="0" HeightRequest="32" WidthRequest="32" HorizontalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnClientsTapped" />
                </Image.GestureRecognizers>
            </Image>

            <Image Source="calendar_icon.png" Grid.Column="1" HeightRequest="32" WidthRequest="32" HorizontalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAppointmentsTapped" />
                </Image.GestureRecognizers>
            </Image>

            <Image Source="add_icon.png" Grid.Column="2" HeightRequest="32" WidthRequest="32" HorizontalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAddServiceTapped" />
                </Image.GestureRecognizers>
            </Image>

            <Image Source="review_icon.png" Grid.Column="3" HeightRequest="32" WidthRequest="32" HorizontalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnReviewsTapped" />
                </Image.GestureRecognizers>
            </Image>

            <Image Source="service_icon.png" Grid.Column="4" HeightRequest="32" WidthRequest="32" HorizontalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnServicesTapped" />
                </Image.GestureRecognizers>
            </Image>

        </Grid>

    </Grid>

</ContentPage>
