<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.AdminHomePage"
             Title="Админ-панель"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, *">

      
        <CarouselView x:Name="PromoCarousel"
                      Grid.Row="0"
                      HeightRequest="180"
                      Loop="True"
                      IsBounceEnabled="False"
                      Margin="10,10,10,0">
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>promo1.jpg</x:String>
                    <x:String>promo2.jpg</x:String>
                    <x:String>promo3.jpg</x:String>
                </x:Array>
            </CarouselView.ItemsSource>

            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Image Aspect="AspectFill" Source="{Binding}" />
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <ScrollView Grid.Row="1" Padding="10" Margin="0,60,0,0">
            <Grid ColumnSpacing="10" RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                
                <Frame Grid.Row="0" Grid.Column="0" CornerRadius="10" Padding="10" HasShadow="True" BackgroundColor="#FFF5EE" HeightRequest="140">
                    <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                        <Image Source="client_icon.png" HeightRequest="40" WidthRequest="40" />
                        <Label Text="Клиенты" FontSize="14" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnClientsTapped" />
                    </Frame.GestureRecognizers>
                </Frame>

                
                <Frame Grid.Row="0" Grid.Column="1" CornerRadius="10" Padding="10" HasShadow="True" BackgroundColor="#FFF5EE" HeightRequest="140">
                    <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                        <Image Source="calendar_icon.png" HeightRequest="40" WidthRequest="40" />
                        <Label Text="Записи" FontSize="14" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAppointmentsTapped" />
                    </Frame.GestureRecognizers>
                </Frame>

                
                <Frame Grid.Row="1" Grid.Column="0" CornerRadius="10" Padding="10" HasShadow="True" BackgroundColor="#FFF5EE" HeightRequest="140">
                    <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                        <Image Source="add_icon.png" HeightRequest="40" WidthRequest="40" />
                        <Label Text="Добавить услугу" FontSize="14" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAddServiceTapped" />
                    </Frame.GestureRecognizers>
                </Frame>

                
                <Frame Grid.Row="1" Grid.Column="1" CornerRadius="10" Padding="10" HasShadow="True" BackgroundColor="#FFF5EE" HeightRequest="140">
                    <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                        <Image Source="review_icon.png" HeightRequest="40" WidthRequest="40" />
                        <Label Text="Отзывы" FontSize="14" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnReviewsTapped" />
                    </Frame.GestureRecognizers>
                </Frame>

              
                <Frame Grid.Row="2" Grid.Column="0" CornerRadius="10" Padding="10" HasShadow="True" BackgroundColor="#FFF5EE" HeightRequest="140">
                    <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                        <Image Source="service_icon.png" HeightRequest="40" WidthRequest="40" />
                        <Label Text="Мои услуги" FontSize="14" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnServicesTapped" />
                    </Frame.GestureRecognizers>
                </Frame>

                
                <Frame Grid.Row="2" Grid.Column="1" CornerRadius="10" Padding="10" HasShadow="True" BackgroundColor="#FFF5EE" HeightRequest="140">
                    <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                        <Image Source="logout_icon.png" HeightRequest="40" WidthRequest="40"  />
                        <Label Text="Выход" FontSize="14" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLogoutTapped" />
                    </Frame.GestureRecognizers>
                </Frame>

            </Grid>
        </ScrollView>

    </Grid>

</ContentPage>
