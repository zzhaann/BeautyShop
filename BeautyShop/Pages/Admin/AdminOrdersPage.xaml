<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyShop.Pages.AdminOrdersPage"
             Title="Все заказы">

    <CollectionView x:Name="OrderCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="10" BorderColor="LightGray" CornerRadius="10">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding Username}" FontAttributes="Bold" FontSize="18" />
                        <Label Text="{Binding ServiceTitles}" FontSize="16" TextColor="Gray" />
                        <Label Text="{Binding CreatedAt, StringFormat='Дата: {0:dd.MM.yyyy HH:mm}'}" FontSize="14" TextColor="DarkGray" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
